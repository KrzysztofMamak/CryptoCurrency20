<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/name_text_view"
        tools:text="Name and symbol"
        android:textSize="36sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/rank_text_view"
        tools:text="Rank"
        android:textSize="28sp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:textColor="#545454"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/price_usd_text_view"
        tools:text="Price USD"
        android:textSize="20sp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/price_btc_text_view"
        tools:text="Price BTC"
        android:textSize="20sp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/market_cap_text_view"
        tools:text="Market cap"
        android:textSize="20sp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/percent_1h_text_view"
        tools:text="Change(1h)"
        android:textSize="20sp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/percent_24h_text_view"
        tools:text="Change(24h)"
        android:textSize="20sp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/percent_7d_text_view"
        tools:text="Change(7d)"
        android:textSize="20sp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/insert_currency_button"
        android:text="Insert currency"
        android:layout_marginTop="42dp"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</LinearLayout>